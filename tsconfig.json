{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolvePackageJsonExports": false,
    "outDir": "dist",  
    "rootDir": "src",
    "typeRoots": ["./src/shims", "./node_modules/@types"],
    "declaration": true,
    "declarationDir": "dist/types",
  }, 
  "include": ["src/**/*"]
}