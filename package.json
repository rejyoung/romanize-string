{
    "name": "romanize-string-monorepo",
    "private": "true",
    "workspaces": [
        "packages/romanize-string",
        "packages/thai-engine"
    ],
    "scripts": {
        "build": "run-p build:*",
        "build:romanize-string": "pnpm --filter romanize-string run build",
        "build:thai-engine": "pnpm --filter thai-engine run build",
        "publish:romanize-string": "pnpm publish --filter romanize-string --access public",
        "publish:thai-engine": "pnpm publish --filter thai-engine --access public",
        "test": "pnpm run-s test:*",
        "test:romanize-string": "pnpm --filter romanize-string run test",
        "test:thai-engine": "pnpm --filter thai-engine run test"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.6",
        "npm-run-all2": "^8.0.4"
    }
}
