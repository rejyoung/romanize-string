{
    "name": "romanize-string-monorepo",
    "private": "true",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "run-p build:*",
        "build:romanize-string": "pnpm --filter romanize-string run build",
        "build:thai-romanizer": "pnpm --filter thai-romanizer run build",
        "publish:romanize-string": "pnpm publish --filter romanize-string --access public",
        "publish:thai-romanizer": "pnpm publish --filter thai-romanizer --access public"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.5",
        "npm-run-all2": "^8.0.4"
    }
}
