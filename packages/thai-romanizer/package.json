    "main": "index.js",
    "devDependencies": {
        "@types/node": "^22.16.5",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.8.3",
        "romanize-string": "workspace/*"
    },
    "peerDependencies": {
        "romanize-string": "^1.2.5"
    },
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js",
            "types": "./dist/types/index.d.ts"
        }
    },
    "scripts": {
        "build": "run-s clean build:esm build:cjs",
        "clean": "rm -rf dist",
        "build:esm": "tsc --outDir dist/esm",
        "build:cjs": "tsc --outDir dist/cjs --module CommonJS --moduleResolution node",
        "test": "node --experimental-vm-modules --experimental-specifier-resolution=node ./node_modules/jest/bin/jest.js --config jest.config.js",
        "start": "run-s build start:run ",
        "start:run": "node dist/esm/index.js",
        "prepublishOnly": "run-s build"
    },
