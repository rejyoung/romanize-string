{
    "name": "@romanize-string/language-detector",
    "version": "0.1.0",
    "description": "Language detection plugin for romanize-string.",
    "deprecated": "This package has been abandoned and is not production-ready.",
    "private": true,
    "files": [
        "dist",
        "README.md"
    ],
    "devDependencies": {
        "@types/node": "^22.16.5",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "romanize-string": ">=1.3.0 <2.0.0"
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.cjs"
        }
    },
    "scripts": {
        "build": "pnpm run clean && run-p build:esm build:cjs && pnpm run postbuild",
        "clean": "rm -rf dist",
        "build:esm": "tsc --outDir dist/esm",
        "build:cjs": "tsc --outDir dist/cjs --module CommonJS --moduleResolution node",
        "start": "run-s build start:run ",
        "start:run": "node dist/esm/index.js",
        "postbuild": "node ./scripts/postbuild.mjs"
    },
    "keywords": [],
    "author": "Ryan Young",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rejyoung/romanize-string.git",
        "directory": "packages/language-detector"
    },
    "homepage": "https://github.com/rejyoung/romanize-string/tree/main/packages/language-detector"
}
